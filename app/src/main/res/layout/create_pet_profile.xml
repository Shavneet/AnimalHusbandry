        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Create pet profile"
            android:textColor="@color/LightGreen"
            android:textSize="25dp"

            />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/heading"
            android:background="@color/LightGreen"></View>

        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:gravity="center">

            <ImageButton
                android:id="@+id/ivBtnAddImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/instagramcircle"
                android:elevation="10dp" />


            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivBtnAddImage"
                android:layout_marginTop="-60dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivBtnAddImage"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:backgroundTint="@color/White"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/etPetName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view1"
                            android:layout_marginTop="25dp"
                            android:background="@color/LightGreen"
                            android:hint="Pet Name"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <View
                            android:id="@+id/view2"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etPetName"
                            android:background="@color/DarkGreen"></View>

                        <EditText
                            android:id="@+id/etBreed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etPetName"
                            android:background="@color/LightGreen"
                            android:hint="Breed"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etBreed"
                            android:background="@color/DarkGreen"></View>

                        <EditText
                            android:id="@+id/etColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etBreed"
                            android:background="@color/LightGreen"
                            android:hint="Color"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <View
                            android:id="@+id/view4"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etColor"
                            android:background="@color/DarkGreen"></View>

                        <EditText
                            android:id="@+id/etLocation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/view4"
                            android:background="@color/LightGreen"
                            android:hint="Location"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <View
                            android:id="@+id/view5"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etLocation"
                            android:background="@color/DarkGreen"></View>

                        <EditText
                            android:id="@+id/etBloodline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/view5"
                            android:background="@color/LightGreen"
                            android:hint="Bloodline"
                            android:inputType="textPersonName"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <View
                            android:id="@+id/view6"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etBloodline"
                            android:background="@color/DarkGreen"></View>

                        <EditText
                            android:id="@+id/etRegistration"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/view6"
                            android:background="@color/LightGreen"
                            android:hint="Microchip/Registration Number"
                            android:inputType="textPostalAddress"
                            android:maxLines="1"
                            android:padding="8dp" />

                        <View
                            android:id="@+id/view7"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:layout_below="@+id/etRegistration"
                            android:background="@color/DarkGreen"></View>

                        <EditText
                            android:id="@+id/etAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/view7"
                            android:background="@color/LightGreen"
                            android:hint="Age"
                            android:inputType="numberDecimal"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:padding="8dp"></EditText>

                        <View
                            android:id="@+id/view8"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/DarkGreen"></View>
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tvMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Male"
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />

                            <CheckBox
                                android:id="@+id/checkboxMale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="40dp"
                                android:layout_weight="1"
                                android:shadowColor="@color/White"
                                android:textColor="@color/DarkGreen" />

                            <TextView
                                android:id="@+id/tvFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_weight="1"
                                android:text="Female"
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />

                            <CheckBox
                                android:id="@+id/checkboxFemale"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="0dp"
                                android:layout_weight="1"
                                android:shadowColor="@color/White"
                                android:textColor="@color/DarkGreen" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/DarkGreen"></View>
                        />

                        <TextView
                            android:id="@+id/tvVaccination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/etAge"
                            android:text="Vaccination :"
                            android:textColor="@color/DarkGreen"
                            android:textSize="15dp" />

                        <View
                            android:id="@+id/view12"
                            android:layout_width="90dp"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/DarkGreen"></View>

                        <LinearLayout
                            android:id="@+id/linearLayoutVaccination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="DHPP"
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />

                            <CheckBox
                                android:id="@+id/checkboxDHPP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="34dp"
                                android:layout_weight="1"
                                android:shadowColor="@color/White"
                                android:textColor="@color/DarkGreen" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Rabies"
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />

                            <CheckBox
                                android:id="@+id/checkboxRabies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:layout_weight="1"
                                android:shadowColor="@color/White"
                                android:textColor="@color/DarkGreen" />
                        </LinearLayout>
                        >

                        <LinearLayout
                            android:id="@+id/linearLayoutVaccinationLine2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Parvo virus"
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />

                            <CheckBox
                                android:id="@+id/checkboxParvoVirus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:shadowColor="@color/White"
                                android:textColor="@color/DarkGreen" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" None  "
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />

                            <CheckBox
                                android:id="@+id/checkboxNone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:shadowColor="@color/White"
                                android:textColor="@color/DarkGreen" />
                        </LinearLayout>

                        <View
                            android:id="@+id/view11"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentRight="true"
                            android:background="@color/DarkGreen"></View>
                        />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Any other :" />

                            <View
                                android:id="@+id/view13"
                                android:layout_width="70dp"
                                android:layout_height="1dp"
                                android:layout_alignParentRight="true"
                                android:layout_weight=".5"
                                android:background="@color/DarkGreen"></View>

                            <EditText
                                android:id="@+id/etAnyOther"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:backgroundTint="#2326ff"
                                android:inputType="textPersonName"
                                android:maxLines="1"
                                android:padding="8dp"
                                android:textColor="@color/DarkGreen"
                                android:textSize="15dp" />
                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/btnCreateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/White"
            android:shadowColor="#000"
            android:shadowDx="10"
            android:text="Create profile"
            android:textColor="@color/DarkGreen" />

    </RelativeLayout>


</ScrollView>