<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backcolor2"
    tools:context="com.animalhusbandry.userprofile.FragGetAllMessageByUserId">

    <TextView
        android:id="@+id/tvSentMessagesHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/edit_text_rectengal_background"
        android:backgroundTint="@color/LightGray"
        android:elevation="6dp"
        android:gravity="center"
        android:padding="4sp"
        android:text="Sent messages"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/etNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSentMessagesHeading"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Uhh hooo!!! Nothing related to this search found "
        android:textColor="@color/DarkGreen"
        android:textSize="18sp"
        android:visibility="gone" />
    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etNoDataFound"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/progressBar_Ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />
</RelativeLayout>
