<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6f0fa"
    android:orientation="vertical"
    tools:context="com.animalhusbandry.dashboard.DashboardActivity">

    <TextView
        android:id="@+id/etNoDataFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="Uhh hooo!!! Nothing related to this search found "
        android:textColor="@color/colorPrimaryDark"
        android:textSize="10dp"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etNoDataFound"
        android:scrollbars="vertical" />

    <ProgressBar
        android:id="@+id/progressBar_Ui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" />

