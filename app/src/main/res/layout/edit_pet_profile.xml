<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGreen"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Create pet profile"
        android:textColor="@color/LightGreen"
        android:textSize="15dp"

        />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/heading"
        android:background="@color/LightGreen"></View>

    <ImageView
        android:id="@+id/ivEditAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:background="@drawable/instagramcircle" />

    <EditText
        android:id="@+id/etEditPetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:hint="Pet Name"
        android:textColor="@color/LightGreen"
        android:layout_below="@+id/view1" />

    <View
        android:id="@+id/view2"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditPetName"
        android:background="@color/LightGreen"></View>

    <EditText
        android:id="@+id/etEditBreed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditPetName"
        android:layout_marginRight="90dp"
        android:hint="Breed"
        android:textColor="@color/LightGreen" />

    <View
        android:id="@+id/view3"
        android:layout_width="180dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditBreed"
        android:background="@color/LightGreen"></View>

    <EditText
        android:id="@+id/etEditColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditBreed"
        android:layout_marginRight="100dp"
        android:hint="Color"
        android:textColor="@color/LightGreen" />

    <View
        android:id="@+id/view4"
        android:layout_width="210dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditColor"
        android:background="@color/LightGreen"></View>

    <EditText
        android:id="@+id/etEditLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view4"
        android:layout_marginRight="100dp"
        android:hint="Location"
        android:textColor="@color/LightGreen" />

    <View
        android:id="@+id/view5"
        android:layout_width="240dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditLocation"
        android:background="@color/LightGreen"></View>

    <EditText
        android:id="@+id/etEditBloodline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view5"
        android:layout_marginRight="100dp"
        android:hint="Bloodline"
        android:textColor="@color/LightGreen" />

    <View
        android:id="@+id/view6"
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditBloodline"
        android:background="@color/LightGreen"></View>

    <EditText
        android:id="@+id/etEditRegistration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/view6"
        android:hint="Microchip/Registration Number"
        android:textColor="@color/LightGreen" />

    <View
        android:id="@+id/view7"
        android:layout_width="300dp"
        android:layout_height="1dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/etEditRegistration"
        android:background="@color/LightGreen"></View>

    <EditText
        android:id="@+id/etEditAge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view7"
        android:hint="Age"
        android:textColor="@color/LightGreen"
        />

    <TextView
        android:id="@+id/tvEditMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvEditFemale"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/etEditAge"
        android:text="Male"
        android:textColor="@color/White"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/checkboxEditMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view7"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvEditMale"
        android:shadowColor="@color/White"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/tvEditFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view7"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/checkboxEditMale"
        android:text="Female"
        android:textColor="@color/White"
        android:textSize="20dp" />

    <CheckBox
        android:id="@+id/checkboxEditFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view7"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/tvEditFemale"
        android:shadowColor="@color/White"
        android:textColor="@color/White" />



    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkboxEditFemale"
        android:background="@color/LightGreen"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvEditVaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etEditAge"
            android:text="Vaccination Details:"
            android:textColor="@color/White"
            android:textSize="15dp" />

        <View
            android:id="@+id/view8"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/LightGreen"></View>


        <LinearLayout
            android:id="@+id/linearLayoutVaccination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DHPP"
                android:textColor="@color/White"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkboxEditDHPP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:shadowColor="@color/White"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRabies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rabies"
                android:textColor="@color/White"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkboxEditRabies"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:shadowColor="@color/White"
                android:textColor="@color/White" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutParvoVirus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parvo virus"
                android:textColor="@color/White"
                android:textSize="15dp" />

            <CheckBox
                android:id="@+id/checkboxEditParvoVirus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:shadowColor="@color/White"
                android:textColor="@color/White" />
        </LinearLayout>

        <EditText
            android:id="@+id/etEditAnyOther"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Any other :"
            android:textColor="@color/White"
            android:textSize="15dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitChanges"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:text="Submit Changes"
        android:textColor="@color/DarkGreen" />
</RelativeLayout>
</ScrollView>