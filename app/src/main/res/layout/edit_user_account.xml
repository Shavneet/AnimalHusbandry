<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGreen"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvCreateProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Edit Account"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tvCreateProfile"
        android:background="@color/White"></View>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etEditFName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name"
            android:textColor="#ffff" />

        <View
            android:layout_width="120dp"
            android:layout_height="1dp"
            android:background="@color/White"


            ></View>

        <EditText
            android:id="@+id/etEditLName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last name"
            android:textColor="#ffff" />

        <View
            android:layout_width="150dp"
            android:layout_height="1dp"
            android:background="@color/White"></View>

        <EditText
            android:id="@+id/etEditContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            android:textColor="#ffff" />

        <View
            android:layout_width="180dp"
            android:layout_height="1dp"
            android:background="@color/White"></View>

        <EditText
            android:id="@+id/etEditPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#ffff" />

        <View
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:background="@color/White"></View>

        <EditText
            android:id="@+id/etEditConfirmPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textColor="#ffff" />

        <View
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:background="@color/White"></View>
    </LinearLayout>

    <Button
        android:id="@+id/btnSubmitUserChanges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginTop="20dp"
        android:background="@color/White"
        android:shadowColor="@color/White"
        android:text="Submit Changes"
        android:textColor="@color/White" />
</RelativeLayout>