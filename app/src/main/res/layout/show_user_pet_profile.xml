<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkGreen"

        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCircularImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_1496341879_photo_camera"
                android:elevation="10dp"
                android:scaleType="centerCrop"></de.hdodenhof.circleimageview.CircleImageView>

            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCircularImageView"
                android:layout_marginTop="-70dp"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivCircularImageView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/White"
                    card_view:cardCornerRadius="25dp"
                    card_view:contentPadding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="-5dp"
                        android:background="@drawable/card_edit_text_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/card_view_border"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="100dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/etPetName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/view1"
                                        android:layout_weight="2"
                                        android:inputType="textPersonName"
                                        android:padding="8dp"
                                        android:text="Pet Name"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvPetName"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:inputType="textPersonName"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>
                                ></LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/etBreed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Breed"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvBreed"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvColorq"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Color"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvColor"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvvLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Location"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvLocation"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvvBloodline"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Bloodline"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvBloodline"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvvRegistration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Registration"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvRegistration"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvvAge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Age"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvAge"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tvvGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="1"
                                        android:padding="8dp"
                                        android:text="Gender"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />

                                    <TextView
                                        android:id="@+id/tvGender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_below="@+id/etPetName"
                                        android:layout_weight="3"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tvVaccination"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/etAge"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:text="Vaccination :"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="15dp" />

                                    <View
                                        android:id="@+id/view12"
                                        android:layout_width="90dp"
                                        android:layout_height="1dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dp"
                                        android:background="@color/DarkGreen"></View>

                                    <LinearLayout
                                        android:id="@+id/linearLayoutVaccination"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="DHPP"
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <View
                                            android:id="@+id/view12.1"
                                            android:layout_width="90dp"
                                            android:layout_height="1dp"
                                            android:layout_alignParentRight="true"
                                            android:background="@color/DarkGreen"></View>


                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Rabies"
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <View
                                            android:id="@+id/view12.2"
                                            android:layout_width="90dp"
                                            android:layout_height="1dp"
                                            android:layout_alignParentRight="true"
                                            android:background="@color/DarkGreen"></View>

                                    </LinearLayout>
                                    >

                                    <LinearLayout
                                        android:id="@+id/linearLayoutVaccinationLine2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_weight="4"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Parvo virus"
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <View
                                            android:id="@+id/view12.3"
                                            android:layout_width="90dp"
                                            android:layout_height="1dp"
                                            android:layout_alignParentRight="true"
                                            android:background="@color/DarkGreen"></View>

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text=" None  "
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <View
                                            android:id="@+id/view12.4"
                                            android:layout_width="90dp"
                                            android:layout_height="1dp"
                                            android:layout_alignParentRight="true"
                                            android:background="@color/DarkGreen"></View>
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="Any other :"
                                        android:textColor="@color/DarkGreen" />

                                    <View
                                        android:id="@+id/view13"
                                        android:layout_width="70dp"
                                        android:layout_height="1dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dp"
                                        android:layout_weight=".5"
                                        android:background="@color/DarkGreen"></View>

                                    <TextView
                                        android:id="@+id/tvAnyOther"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="2"
                                        android:backgroundTint="@color/White"
                                        android:inputType="textPersonName"
                                        android:maxLines="1"
                                        android:padding="8dp"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="3"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="vertical">


                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btnCreateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:elevation="6dp"
            android:shadowColor="#FFFF"
            android:shadowDx="10"
            android:shadowDy="10"
            android:text="Edit profile"
            android:textColor="@color/DarkGreen" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>