<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relative_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/DarkGreen"
    android:gravity="bottom">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardCornerRadius="6dp"
        card_view:contentPadding="10dp">

        <LinearLayout
            android:id="@+id/containerCardViewElements"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--  <RelativeLayout
                  android:id="@+id/forImageViewAddUserPhoto"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentTop="true"
                  android:layout_centerHorizontal="true">

                  <ImageView
                      android:layout_width="110dp"
                      android:layout_height="100dp"
                      android:layout_marginTop="10dp"
                      app:srcCompat="@drawable/plus"

                      />

              </RelativeLayout>-->

            <RelativeLayout
                android:id="@+id/forEditTextFName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forImageViewAddUserPhoto"
                android:layout_marginTop="20dp">
                />

                <EditText
                    android:id="@+id/etFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/Orange"
                    android:textColor="@color/DarkGreen"
                    android:layout_toRightOf="@+id/ivForEditTextFName"
                    android:hint="First name"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:drawablePadding="20dp"
                    android:padding="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forEditTextLName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forEditTextFName"
                android:layout_marginTop="10dp">
                />

                <EditText
                    android:id="@+id/etLName"
                    android:backgroundTint="@color/Orange"
                    android:textColor="@color/DarkGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivForEditTextLName"
                    android:hint="Last name"
                    android:drawablePadding="20dp"
                    android:inputType="textPersonName"
                    android:maxLines="1"
                    android:padding="10dp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/forEditTextEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forEditTextLName"
                android:layout_marginTop="10dp">
                />

                <EditText
                    android:id="@+id/etEmail"
                    android:backgroundTint="@color/Orange"
                    android:textColor="@color/DarkGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivForEditTextEmail"
                    android:hint="Email"
                    android:drawablePadding="20dp"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:padding="10dp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forEditTextContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forEdittextEmail"
                android:layout_marginTop="10dp">


                <EditText
                    android:id="@+id/etContact"
                    android:backgroundTint="@color/Orange"
                    android:textColor="@color/DarkGreen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:layout_toRightOf="@+id/ivForEditTextContacts"
                    android:hint="Mobile Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:padding="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forEditTextPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="20dp"
                android:layout_below="@+id/forEditTextEmail"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/Orange"
                    android:textColor="@color/DarkGreen"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/ivForEditTextPassword"
                    android:hint="Password"
                    android:drawablePadding="20dp"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forEditTextConfirmPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forEditTextPassword"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/Orange"
                    android:textColor="@color/DarkGreen"
                    android:layout_height="wrap_content"
                    android:drawablePadding="20dp"
                    android:layout_toRightOf="@+id/ivForEditTextConfirmPassword"
                    android:hint="Confirm password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:padding="10dp" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_view"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="-33dp"
        android:elevation="10dp"

        >

        <Button
            android:id="@+id/btnCreateUserAccount"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:elevation="10dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ic_login_buttton" />


        <Button
            android:id="@+id/googleSignInButton"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/googleplus"
            android:elevation="10dp" />
    </RelativeLayout>

</RelativeLayout>


