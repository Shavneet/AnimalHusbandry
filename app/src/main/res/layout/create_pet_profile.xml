<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/DarkGreen"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivCircularImageView"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_below="@+id/view1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/ic_1496341879_photo_camera"
                android:elevation="10dp"
                android:scaleType="centerCrop"></de.hdodenhof.circleimageview.CircleImageView>

            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ivCircularImageView"
                android:layout_marginTop="-70dp"
                android:descendantFocusability="beforeDescendants"
                android:focusable="true">

                <android.support.v7.widget.CardView
                    android:id="@+id/card_view_pet_profile_ui"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ivCircularImageView"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:backgroundTint="@color/White"
                    card_view:cardCornerRadius="25dp"
                    card_view:contentPadding="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="-5dp"
                        android:background="@drawable/card_edit_text_background"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@drawable/card_view_border"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="10dp"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etPetName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/view1"
                                    android:layout_marginTop="65dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Pet Name"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />


                                <EditText
                                    android:id="@+id/etBreed"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/etPetName"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Breed"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />


                                <EditText
                                    android:id="@+id/etColor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/etBreed"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Color"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />


                                <EditText
                                    android:id="@+id/etLocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/view4"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Location"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />


                                <EditText
                                    android:id="@+id/etBloodline"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Bloodline"
                                    android:inputType="textPersonName"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />


                                <EditText
                                    android:id="@+id/etRegistration"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_below="@+id/view6"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Microchip/Registration Number"
                                    android:inputType="textPostalAddress"
                                    android:maxLines="1"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />

                                <EditText
                                    android:id="@+id/etOwnerMobileNumber"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint="Owner Mobile Number"
                                    android:inputType="number"
                                    android:maxLength="11"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />

                                <EditText
                                    android:id="@+id/etAge"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:hint=" Age"
                                    android:inputType="number"
                                    android:maxLength="11"
                                    android:padding="8dp"
                                    android:textColor="@color/DarkGreen"
                                    android:textSize="20dp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_weight="4"
                                    android:background="@drawable/card_view_border_orange"

                                    android:orientation="horizontal"

                                    android:padding="4dp">

                                    <TextView
                                        android:id="@+id/tvMale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_weight="1"
                                        android:text="Male"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="15dp" />

                                    <CheckBox
                                        android:id="@+id/checkboxMale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="40dp"
                                        android:layout_weight="1"
                                        android:shadowColor="@color/White"
                                        android:textColor="@color/DarkGreen" />

                                    <TextView
                                        android:id="@+id/tvFemale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:text="Female"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="15dp" />

                                    <CheckBox
                                        android:id="@+id/checkboxFemale"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="0dp"
                                        android:layout_weight="1"
                                        android:shadowColor="@color/White"
                                        android:textColor="@color/DarkGreen" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="10dp"
                                    android:background="@drawable/card_view_border_orange"
                                    android:orientation="vertical">


                                    <TextView
                                        android:id="@+id/tvVaccination"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/etAge"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:text="Vaccination :"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="15dp" />

                                    <View
                                        android:id="@+id/view12"
                                        android:layout_width="90dp"
                                        android:layout_height="1dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dp"
                                        android:background="@color/DarkGreen"></View>

                                    <LinearLayout
                                        android:id="@+id/linearLayoutVaccination"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_weight="4"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="DHPP"
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <CheckBox
                                            android:id="@+id/checkboxDHPP"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="34dp"
                                            android:layout_weight="1"
                                            android:shadowColor="@color/White"
                                            android:textColor="@color/DarkGreen" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Rabies"
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <CheckBox
                                            android:id="@+id/checkboxRabies"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="2dp"
                                            android:layout_weight="1"
                                            android:shadowColor="@color/White"
                                            android:textColor="@color/DarkGreen" />
                                    </LinearLayout>
                                    >

                                    <LinearLayout
                                        android:id="@+id/linearLayoutVaccinationLine2"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:layout_marginLeft="30dp"
                                        android:layout_weight="4"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="Parvo virus"
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <CheckBox
                                            android:id="@+id/checkboxParvoVirus"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:shadowColor="@color/White"
                                            android:textColor="@color/DarkGreen" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text=" None  "
                                            android:textColor="@color/DarkGreen"
                                            android:textSize="15dp" />

                                        <CheckBox
                                            android:id="@+id/checkboxNone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:shadowColor="@color/White"
                                            android:textColor="@color/DarkGreen" />
                                    </LinearLayout>


                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_weight="1"
                                        android:text="Any other :"
                                        android:textColor="@color/DarkGreen" />

                                    <View
                                        android:id="@+id/view13"
                                        android:layout_width="70dp"
                                        android:layout_height="1dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginLeft="15dp"
                                        android:layout_weight=".5"
                                        android:background="@color/DarkGreen"></View>

                                    <EditText
                                        android:id="@+id/etAnyOther"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginTop="5dp"
                                        android:layout_weight="2"
                                        android:background="@drawable/edit_text_rectengal_background"
                                        android:inputType="textPersonName"
                                        android:maxLines="1"
                                        android:padding="8dp"
                                        android:textAlignment="gravity"
                                        android:textColor="@color/DarkGreen"
                                        android:textSize="20dp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </RelativeLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/btnCreateProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_background"
            android:elevation="6dp"
            android:shadowColor="#FFFF"
            android:shadowDx="10"
            android:shadowDy="10"
            android:text="Create profile"
            android:textColor="@color/DarkGreen" />

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>